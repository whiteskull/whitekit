#whitekit-tools {
  z-index: 9999;
	position: fixed;
	top: 0;
	right: 0;
	padding: 10px 10px 10px 20px;
	background: #999;
	opacity: 0.5;
	filter: alpha(opacity=50);

	img {
		opacity: 0.5;
		filter: alpha(opacity=50);
	}
	#whitekit-caches {
    float: left;

    #whitekit-clear-caches-loader {
      padding: 8px;
    }
  }
	.whitekit-slide-panel {
		position: absolute;
		left: 0;
		top: 0;
		width: 20px;
		height: 68px;
    cursor: pointer;

    opacity: 0.3;
    filter: alpha(opacity=30);

    &.w-open {
      background: #333 url(<%= asset_path('whitekit/right.png') %>) 2px 13px no-repeat;
    }
    &.w-close {
      background: #333 url(<%= asset_path('whitekit/left.png') %>) 2px 13px no-repeat;
    }
	}
}
.whitekit-hover {
  background: #ffdead;
  cursor: pointer;
}
.whitekit-sub-hover {
  background: #d1b68e;
  cursor: pointer;
}
#whitekit-site {
  position: absolute;
  top: 0;
  left: -1210px;
  background: #bbb;
  z-index: 998;
  height: 100%;
  font-size: 12px;

  ul:first-child {
    padding: 0;
    margin: 0;
    padding-left: 10px;
    width: 250px;
    overflow: auto;
    height: 100%;
  }

  .whitekit-directory {

    li {
      list-style: none;
    }
    ul {
      margin-left: 7px;
      padding-left: 8px;
      border-left: 1px solid #999;
    }

    .whitekit-folder {
      background: url(<%= asset_path('whitekit/folder.png') %>) 0 1px no-repeat;

      color: #333;
      padding-left: 20px;
      font-weight: bold;
      cursor: pointer;

      &:hover {
        color: #fff;
      }
    }
    .whitekit-file {
      background: url(<%= asset_path('whitekit/file_text.png') %>) 0 1px no-repeat;

      color: #222;
      padding-left: 20px;
      margin-left: 3px;
      cursor: pointer;

      &:hover {
        color: #fff;
      }
    }
  }
  #whitekit-editor {
    position: absolute;
    top: 30px;
    bottom: 0;
    left: 260px;
    width: 950px;

    #whitekit-editor-panel {
      width: 100%;
      height: 30px;
      background: red;
      top: -30px;
    }
    #whitekit-editor-code {
      font-size: 14px;
      width: 100%;
      height: 100%;
    }
  }
  #whitekit-site-move {
    background: #999 url(<%= asset_path('whitekit/right_tree.png') %>) 50% 50% no-repeat;
    position: absolute;
    left: 1210px;
    width: 10px;
    top: 0;
    height: 100%;
    cursor: pointer;
    opacity: 0.2;
    filter: alpha(opacity=20);

    &.opened {
      background: #999 url(<%= asset_path('whitekit/left_tree.png') %>) 50% 50% no-repeat;
    }
  }
}
