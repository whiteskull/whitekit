#whitecms-tools {
  z-index: 99999;
	position: fixed;
	top: 0;
	right: 0;
	padding: 10px 10px 10px 20px;
	background: #999;
	opacity: 0.5;
	filter: alpha(opacity=50);

	img {
		opacity: 0.5;
		filter: alpha(opacity=50);
	}
	#whitecms-caches {
    float: left;

    #whitecms-clear-caches-loader {
      padding: 8px;
    }
  }
	.whitecms-slide-panel {
		position: absolute;
		left: 0;
		top: 0;
		width: 20px;
		height: 68px;
    cursor: pointer;

    opacity: 0.3;
    filter: alpha(opacity=30);

    &.w-open {
      background: #333 url(<%= asset_path('white/right.png') %>) 2px 13px no-repeat;
    }
    &.w-close {
      background: #333 url(<%= asset_path('white/left.png') %>) 2px 13px no-repeat;
    }
	}
}
.whitecms-hover {
  background: #ffdead;
  cursor: pointer;
}
.whitecms-sub-hover {
  background: #d1b68e;
  cursor: pointer;
}
