.devise-forms
  %h2= t('devise.confirmations.resend')
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {class: 'form-horizontal', method: :post }) do |f|
    = f.input :email
    .control-group
      .controls
        = f.button :submit, t('devise.confirmations.resend')
  = render 'devise/shared/links'

%h2 Resend confirmation instructions
= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  %div= f.submit "Resend confirmation instructions"
= render "devise/shared/links"
