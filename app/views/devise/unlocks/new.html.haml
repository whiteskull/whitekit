#devise-form
  %h2= t('devise.unlocks.resend')
  = simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {class: 'form-horizontal', method: :post}) do |f|
    = f.input :email, autofocus: true
    .control-group
      .controls
        = f.button :submit, t('devise.unlocks.resend')
  = render 'devise/shared/links'

