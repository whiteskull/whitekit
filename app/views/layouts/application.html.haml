!!!
%html
  %head
    = render 'layouts/head'
  %body{id: controller_name}
    = render 'layouts/rails_admin/white/tools'
    #wrapper
      #header
        = render 'devise/menu/auth_items'
      #middle
        #container
          #content
            = breadcrumbs @page if @page.present?
            = render 'layouts/messages'
            = yield
        #side-left.sidebar
          = render 'layouts/main_menu'
        #side-right.sidebar
          = BlockPosition.view :right
    #footer
      = Block.view :copyright
